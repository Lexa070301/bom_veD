<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/margin_items"

    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/cardId"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/margin_items_2x"
        android:background="@color/background_recycleView"
        >

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/image_avatar"
            android:layout_width="@dimen/icon_width"
            android:layout_height="@dimen/icon_height"

            app:layout_constraintEnd_toStartOf="@id/item_name"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/margin_items_2x"
            android:text="@string/Item_name_example"
            android:textColor="@color/white"

            style="@style/TextStyleNormal"

            app:layout_constraintStart_toEndOf="@id/image_avatar"
            app:layout_constraintTop_toTopOf="@id/image_avatar"

            />

        <TextView
            android:id="@+id/item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Item_date_example"
            android:textColor="@color/almost_white"

            app:layout_constraintStart_toStartOf="@id/item_name"
            app:layout_constraintTop_toBottomOf="@id/item_name"

            />

        <TextView
            android:id="@+id/item_information"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/Item_information_example"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:layout_marginTop="@dimen/margin_items_2x"

            style="@style/TextStyleNormal"

            android:textColor="@color/white"
            android:maxLines="3"
            android:lines="3"
            android:scrollHorizontally="true"
            android:ellipsize="middle"
            app:layout_constraintStart_toStartOf="parent"

            app:layout_constraintTop_toBottomOf="@+id/image_avatar" />

        <TextView
            android:id="@+id/item_gender_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_items"

            style="@style/TextStyleNormal"

            android:text="@string/Item_gender_type_example"
            android:textColor="@color/yellow"

            app:layout_constraintTop_toBottomOf="@id/item_information"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"

            />

        <Button
            android:id="@+id/button_like"
            android:layout_width="@dimen/button_like_width"
            android:layout_height="@dimen/button_like_height"
            android:background="@drawable/ic_thumb_up"
            android:layout_marginTop="@dimen/margin_items"
            android:text=""

            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/item_information"

            />
    </androidx.constraintlayout.widget.ConstraintLayout>




</androidx.constraintlayout.widget.ConstraintLayout>